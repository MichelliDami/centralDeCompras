{
  "openapi": "3.0.0",
  "info": {
    "title": "Central de Compras API",
    "version": "1.0.0",
    "description": "API para gerenciamento de compras\nEquipe: Nicole, Josué, Michelli"
  },

  "tags": [
    { "name": "Usuários", "description": "Gerenciamento de usuários — Responsável: Nicole" },
    { "name": "Fornecedores", "description": "Gerenciamento de fornecedores — Responsável: Nicole" },
    { "name": "Lojas", "description": "Gerenciamento de lojas — Responsável: Josué" },
    { "name": "Produtos", "description": "Gerenciamento de produtos — Responsável: Josué" },
    { "name": "Pedidos", "description": "Gerenciamento de pedidos — Responsável: Michelli" },
    { "name": "Campanhas", "description": "Gerenciamento de campanhas — Responsável: Michelli" }
  ],

  "paths": {
    "/users": {
      "get": {
        "tags": ["Usuários"],
        "summary": "Listar todos os usuários",
        "responses": { "200": { "description": "Sucesso" } }
      },
      "post": {
        "tags": ["Usuários"],
        "summary": "Cadastrar novo usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string", "example": "Nicole" },
                  "contact_email": { "type": "string", "example": "nicole@teste.com" },
                  "user": { "type": "string", "example": "nicole123" },
                  "pwd": { "type": "string", "example": "senha123" },
                  "level": { "type": "string", "example": "admin" },
                  "status": { "type": "string", "example": "on" }
                },
                "required": ["name", "contact_email", "user", "pwd"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Usuário criado" } }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": ["Usuários"],
        "summary": "Buscar usuário por ID",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": {
          "200": { "description": "Sucesso" },
          "404": { "description": "Usuário não encontrado" }
        }
      },
      "put": {
        "tags": ["Usuários"],
        "summary": "Atualizar usuário",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "contact_email": { "type": "string" },
                  "user": { "type": "string" },
                  "pwd": { "type": "string" },
                  "level": { "type": "string" },
                  "status": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": { "200": { "description": "Atualizado" }, "404": { "description": "Usuário não encontrado" } }
      },
      "delete": {
        "tags": ["Usuários"],
        "summary": "Deletar usuário",
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }],
        "responses": { "200": { "description": "Deletado" } }
      }
    },

    "/suppliers": {
      "get": { "tags": ["Fornecedores"], "summary": "Listar todos os fornecedores", "responses": { "200": { "description": "Sucesso" } } },
      "post": {
        "tags": ["Fornecedores"],
        "summary": "Cadastrar novo fornecedor",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "supplier_name": { "type": "string" },
                  "supplier_category": { "type": "string" },
                  "contact_email": { "type": "string" },
                  "phone_number": { "type": "string" },
                  "status": { "type": "string" }
                },
                "required": ["supplier_name", "supplier_category", "contact_email", "phone_number"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Fornecedor criado" } }
      }
    },
    "/suppliers/{id}": {
      "get": { "tags": ["Fornecedores"], "summary": "Buscar fornecedor por ID", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Sucesso" }, "404": { "description": "Fornecedor não encontrado" } } },
      "put": { "tags": ["Fornecedores"], "summary": "Atualizar fornecedor", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "supplier_name": { "type": "string" }, "supplier_category": { "type": "string" }, "contact_email": { "type": "string" }, "phone_number": { "type": "string" }, "status": { "type": "string" } } } } } }, "responses": { "200": { "description": "Atualizado" }, "404": { "description": "Fornecedor não encontrado" } } },
      "delete": { "tags": ["Fornecedores"], "summary": "Deletar fornecedor", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Deletado" } } }
    },

    "/stores": {
      "get": { "tags": ["Lojas"], "summary": "Listar todas as lojas", "responses": { "200": { "description": "Sucesso" } } },
      "post": {
        "tags": ["Lojas"],
        "summary": "Cadastrar nova loja",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "store_name": { "type": "string" },
                  "cnpj": { "type": "string" },
                  "address": { "type": "string" },
                  "phone_number": { "type": "string" },
                  "contact_email": { "type": "string" },
                  "status": { "type": "string" }
                },
                "required": ["store_name", "cnpj", "address", "phone_number", "contact_email"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Loja criada" } }
      }
    },
    "/stores/{id}": {
      "get": { "tags": ["Lojas"], "summary": "Buscar loja por ID", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Sucesso" }, "404": { "description": "Loja não encontrada" } } },
      "put": { "tags": ["Lojas"], "summary": "Atualizar loja", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "store_name": { "type": "string" }, "cnpj": { "type": "string" }, "address": { "type": "string" }, "phone_number": { "type": "string" }, "contact_email": { "type": "string" }, "status": { "type": "string" } } } } } }, "responses": { "200": { "description": "Atualizado" }, "404": { "description": "Loja não encontrada" } } },
      "delete": { "tags": ["Lojas"], "summary": "Deletar loja", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Deletado" } } }
    },

    "/products": {
      "get": { "tags": ["Produtos"], "summary": "Listar todos os produtos", "responses": { "200": { "description": "Sucesso" } } },
      "post": { "tags": ["Produtos"], "summary": "Cadastrar novo produto", "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "description": { "type": "string" }, "price": { "type": "number" }, "stock_quantity": { "type": "integer" }, "supplier_id": { "type": "string" }, "status": { "type": "string" } }, "required": ["name", "description", "price", "stock_quantity", "supplier_id"] } } } }, "responses": { "201": { "description": "Produto criado" } } }
    },"/products/supplier/{supplierId}": {
  "get": {
    "tags": ["Produtos"],
    "summary": "Listar produtos de um fornecedor específico",
    "parameters": [
      {
        "name": "supplierId",
        "in": "path",
        "required": true,
        "schema": { "type": "string" },
        "description": "ID do fornecedor"
      }
    ],
    "responses": {
      "200": {
        "description": "Lista de produtos retornada com sucesso"
      },
      "404": {
        "description": "Nenhum produto encontrado para este fornecedor"
      }
    }
  }
}
,
    "/products/{id}": {
      "get": { "tags": ["Produtos"], "summary": "Buscar produto por ID", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Sucesso" }, "404": { "description": "Produto não encontrado" } } },
      "put": { "tags": ["Produtos"], "summary": "Atualizar produto", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "name": { "type": "string" }, "description": { "type": "string" }, "price": { "type": "number" }, "stock_quantity": { "type": "integer" }, "supplier_id": { "type": "string" }, "status": { "type": "string" } } } } } }, "responses": { "200": { "description": "Atualizado" }, "404": { "description": "Produto não encontrado" } } },
      "delete": { "tags": ["Produtos"], "summary": "Deletar produto", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Deletado" } } }
    },

    "/orders": {
      "get": { "tags": ["Pedidos"], "summary": "Listar todos os pedidos", "responses": { "200": { "description": "Sucesso" } } },
      "post": { "tags": ["Pedidos"], "summary": "Criar novo pedido", "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "store_id": { "type": "string" }, "items": { "type": "array", "items": { "type": "object", "properties": { "product_id": { "type": "string" }, "quantity": { "type": "integer" }, "campaign_id": { "type": "string" }, "unit_price": { "type": "number" } } } }, "total_amount": { "type": "number" }, "status": { "type": "string" } }, "required": ["store_id", "items"] } } } }, "responses": { "201": { "description": "Pedido criado" } } }
    },
    "/orders/{id}": {
      "get": { "tags": ["Pedidos"], "summary": "Buscar pedido por ID", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Sucesso" }, "404": { "description": "Pedido não encontrado" } } },
      "put": { "tags": ["Pedidos"], "summary": "Atualizar pedido", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "store_id": { "type": "string" }, "items": { "type": "array", "items": { "type": "object", "properties": { "product_id": { "type": "string" }, "quantity": { "type": "integer" }, "campaign_id": { "type": "string" }, "unit_price": { "type": "number" } } } }, "status": { "type": "string" } } } } } }, "responses": { "200": { "description": "Atualizado" }, "404": { "description": "Pedido não encontrado" } } },
      "delete": { "tags": ["Pedidos"], "summary": "Deletar pedido", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Deletado" } } }
    },

    "/campaigns": {
      "get": { "tags": ["Campanhas"], "summary": "Listar todas as campanhas", "responses": { "200": { "description": "Sucesso" } } },
      "post": { "tags": ["Campanhas"], "summary": "Criar nova campanha", "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "supplier_id": { "type": "string" }, "name": { "type": "string" }, "start_date": { "type": "string" }, "end_date": { "type": "string" }, "discount_percentage": { "type": "number" } }, "required": ["supplier_id", "name", "discount_percentage"] } } } }, "responses": { "201": { "description": "Campanha criada" } } }
    },
    "/campaigns/{id}": {
      "get": { "tags": ["Campanhas"], "summary": "Buscar campanha por ID", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Sucesso" }, "404": { "description": "Campanha não encontrada" } } },
      "put": { "tags": ["Campanhas"], "summary": "Atualizar campanha", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "supplier_id": { "type": "string" }, "name": { "type": "string" }, "start_date": { "type": "string" }, "end_date": { "type": "string" }, "discount_percentage": { "type": "number" } } } } } }, "responses": { "200": { "description": "Atualizado" }, "404": { "description": "Campanha não encontrada" } } },
      "delete": { "tags": ["Campanhas"], "summary": "Deletar campanha", "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }], "responses": { "200": { "description": "Deletado" } } }
    }
  }
}
