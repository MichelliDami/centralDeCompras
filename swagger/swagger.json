    "/products/import": {
      "post": {
        "tags": ["Produtos"],
        "summary": "Importar produtos via arquivo Excel",
        "description": "Recebe um arquivo .xlsx contendo produtos e realiza a importação em massa.",
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary",
                    "description": "Arquivo Excel contendo os produtos"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Importação realizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": { "type": "string" },
                    "total": { "type": "number" },
                    "produtos": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "name": { "type": "string" },
                          "description": { "type": "string" },
                          "price": { "type": "number" },
                          "stock_quantity": { "type": "number" },
                          "supplier_id": { "type": "string" },
                          "status": { "type": "string" },
                          "barcode": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "Erro de validação do arquivo" },
          "500": { "description": "Erro interno durante a importação" }
        }
      }
    },

